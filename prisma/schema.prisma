generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                     String                  @id @default(cuid())
  createdAt              DateTime                @default(now()) @db.Timestamp(6)
  title                  String
  description            String?
  location               String?
  yearCompleted          Int
  typology               BUILDING_TYPOLOGY[]
  authorId               String
  author                 User                    @relation(fields: [authorId], references: [id])
  selectedForCompetition Boolean                 @default(false)
  images                 Image[]
  projectMaterial        ProjectMaterial[]       @relation("MaterialToProject")
  materials              Material[]
  stakeholders           Stakeholder[]
  area                   Int
  construction           CONSTRUCTION_TYPOLOGY[]
  votes                  Int                     @default(0)
  projectVotes           Vote[]
  imageCredit            String?
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  voteCount Int       @default(0)
  votes     Vote[]   
  projects Project[]
}


model Vote {
  id        String   @id @default(cuid())
  userId    String
  projectId String

  /// The *day* the vote is counted for (no time component)
  voteOn    DateTime

  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([userId, projectId, voteOn]) // one vote per user per project per day
  @@index([projectId, voteOn])
  @@index([userId, voteOn])
}

model Image {
  id        String     @id @default(cuid())
  url       String
  projectId String
  project   Project    @relation(fields: [projectId], references: [id])
  aiTags    String[]
  materials Material[] //will be empty for now
  credit    String?
}

model Stakeholder {
  id          String           @id @default(cuid())
  type        STAKEHOLDER_TYPE[]
  companyName String
  email       String[] 
  location    String?
  phoneNumber String[]
  projects    Project[]
  url         String?
}

model Supplier {
  id          String     @id @default(cuid())
  name        String
  website     String?
  locations    String[]
  email       String[]
  phoneNumber String[]
  materials   Material[]
}

model Material {
  id               String            @id @default(cuid())
  name             String
  description      String?
  url              String?
  supplierId       String
  supplier         Supplier          @relation(fields: [supplierId], references: [id])
  projectMaterials ProjectMaterial[] @relation("MaterialToProject")
  projects         Project[]
  images           Image[]
  tags             String[] //characteristics, ex. natural, reused, circular
  certifications   String[]
}

model ProjectMaterial {
  id         String   @id @default(cuid())
  materialId String
  projectId  String
  usedWhere  String
  percentage Int?
  material   Material @relation("MaterialToProject", fields: [materialId], references: [id])
  project    Project  @relation("MaterialToProject", fields: [projectId], references: [id])
}

enum CONSTRUCTION_TYPOLOGY {
  NEW
  EXTENSION
  RENOVATION
  RESTORATION
  CONVERSION
}

enum BUILDING_TYPOLOGY {
  RESIDENTIAL
  COMMERCIAL
  MIXED_USE
  INDUSTRIAL
  INSTITUTIONAL
  HEALTHCARE
  OTHER
}

enum STAKEHOLDER_TYPE {
  ARCHITECT
  INTERIOR_ARCHITECT
  CONTRACTOR
  ENGINEER
  PHOTOGRAPHER
}
